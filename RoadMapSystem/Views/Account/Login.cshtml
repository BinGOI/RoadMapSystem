@model RoadMapSystem.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}


@{
    Layout = "";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
      asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
      asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h1>Вхід на сайт</h1>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div class="form-group">
                <label class="control-label" asp-for="Login">Введіть Login</label>
                <input type="text" class="form-control" asp-for="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">Введіть пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Увійти" class="btn" />
            </div>
        </form>

    </div>
    <div class="col-md-4">
    </div>


</div>
