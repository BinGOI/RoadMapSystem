@model RoadMapSystem.Models.DB.Comment

@{
    ViewData["Title"] = "Create";
}

<h2>Додати коментар</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <b>Коментар від: </b>
            @(@ViewBag.Name + " " + @ViewBag.Surname)
            <div class="form-group">
                <input asp-for="AuthorId" value="ViewBag.IdM" class="form-control" />
            </div>
            <b>Майлстоун: </b>
            @ViewBag.Id
            <div class="form-group">
                <input asp-for="MileStoneId" class="form-control" value="ViewBag.Id" />
            </div>
            <div class="form-group">
                <label asp-for="CommentValue" class="control-label"></label>
                <textarea asp-for="CommentValue" class="form-control"></textarea>
                <span asp-validation-for="CommentValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
