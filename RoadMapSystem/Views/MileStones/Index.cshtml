@model IEnumerable<RoadMapSystem.Models.DB.MileStone>
@using System.Security.Claims

@using System.Linq;

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <h1>@ViewBag.Name  @ViewBag.Surname</h1>
    <hr />
    <br>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div style="background-color:lightgreen" class="panel-heading">
                        <b>Інформація про майлстоун для @item.EmployeeSkillValue.Skill.SkillTitle</b>
                    </div>
                    <div style="background-color:lightgreen" class="panel-body">
                        <b>Дата майлстоуна:</b> @Html.DisplayFor(modelItem => item.Date)
                        <br>
                        <b>Скіл для перевірки:</b> @Html.DisplayFor(modelItem => item.EmployeeSkillValue.Skill.SkillTitle)
                        <br>
                        <b>Ментори: </b>
                        @foreach (var mentor in item.EmployeeSkillValue.Employee.EmployeeMentorsIntern)
                        {
                            @(mentor.Mentor.Name + " " + mentor.Mentor.Surname + " " + mentor.Mentor.Patronymic) <br /> <a asp-action="Info" asp-route-login="@mentor.Mentor.EmployeeAccount.Login">Переглянути</a>
                            <br>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div style="background-color:lightyellow" class="panel-heading">
                        <b>Опис</b>
                    </div>
                    <div style="background-color:lightyellow" class="panel-body">
                        <b>Назва скіла для перевірки: </b>@Html.DisplayFor(model => item.EmployeeSkillValue.Skill.SkillTitle)
                        <br /><b>Опис: </b> @Html.DisplayFor(model => item.EmployeeSkillValue.Skill.DescriptionOfSkill)
                    </div>
                </div>

            </div>
            @if (item.Comment.Count != 0)
            {
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div style="background-color:lightyellow" class="panel-heading">
                            <b>Коментарі</b>
                        </div>
                        <div style="background-color:lightyellow" class="panel-body">
                            @foreach (var comment in item.Comment)
                            {
                                @("Comment from" + comment.MileStone.EmployeeSkillValue.Employee.Name + " " + comment.MileStone.EmployeeSkillValue.Employee.Surname) <a asp-action="Info" asp-route-login="@comment.MileStone.EmployeeSkillValue.Employee.EmployeeAccount.Login">Переглянути</a>
                                <br>
                                @Html.DisplayName("Comment") @Html.DisplayFor(modelItem => comment.CommentValue)
                            }
                        </div>
                    </div>

                </div>
            }
        </div>

    }

</div>
